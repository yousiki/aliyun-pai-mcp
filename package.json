{
  "name": "aliyun-pai-mcp",
  "version": "0.4.0",
  "description": "MCP server for Aliyun PAI-DLC distributed training",
  "type": "module",
  "bin": {
    "aliyun-pai-mcp": "src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "server": "bun run src/index.ts server",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@alicloud/pai-dlc20201203": "^1.6.9",
    "@alicloud/openapi-client": "^0.4.15",
    "@alicloud/aiworkspace20210204": "^6.1.0",
    "@alicloud/sts20150401": "^1.2.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6",
    "commander": "^14.0.3",
    "@clack/prompts": "^1.0.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
